{
    "manifest_version": 2,

    "name": "Mixpanel Event Tracker",
    "short_name": "Mixpanel Tracker",
    "description": "Parse and display tracking data sent to Mixpanel.",
    "version": "0.1",
    "author": "Anirban Sengupta",

    "browser_action": {
        "default_icon": "icons/icon128.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "64": "icons/icon64.png",
        "96": "icons/icon96.png",
        "128": "icons/icon128.png"
    },

    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "permissions": [
        "tabs",
        "webRequest",
        "http://*/*", 
        "https://*/*"
    ]
}